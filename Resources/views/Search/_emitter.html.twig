    <div class="searchWidget-panel" ng-class="{is_in:showSearchPanel}">
        <div class="searchWidget-panel-body">
            <div class="input-group searchWidget-inputGroup">
                <input name="q" type="text" class="form-control" placeholder="{{ 'victoire.widget.search.show.input.placeholder'|trans }}" value="{{ query }}">

                    <span class="input-group-btn">
                        <button class="btn btn-primary -square" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
            </div>
        </div>
    </div>
</form>