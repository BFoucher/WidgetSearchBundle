        <?xml version="1.0" encoding="UTF-8" standalone="no"?>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25">
            <path fill-rule="evenodd" d="M24.438 21.152l-5.98-5.98c.9-1.48 1.422-3.22 1.422-5.08C19.88 4.683 15.194 0 9.79 0 4.383 0 0 4.384 0 9.79c0 5.407 4.686 10.09 10.09 10.09 1.797 0 3.482-.488 4.928-1.33l6.013 6.01c.59.59 1.543.59 2.13 0l1.494-1.49c.585-.59.372-1.33-.216-1.918zM3.008 9.79c0-3.744 3.035-6.78 6.778-6.78 3.744 0 7.08 3.336 7.08 7.08s-3.034 6.777-6.778 6.777c-3.743 0-7.08-3.335-7.08-7.078z"/>
